---
import BaseLayout from '../../layouts/BaseLayout.astro';
import VoteTable from '../../components/VoteTable.astro';
import SpeakerTranscript from '../../components/SpeakerTranscript.astro';
import meetingsData from '../../data/meetings.json';

export function getStaticPaths() {
  return meetingsData.meetings.map(meeting => ({
    params: { id: String(meeting.id) },
    props: { meeting }
  }));
}

interface Props {
  meeting: typeof meetingsData.meetings[0];
}

const { meeting } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';

// Get recent meetings for sidebar
const recentMeetings = meetingsData.meetings
  .filter(m => m.id !== meeting.id)
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  .slice(0, 5);

// Format dates
const formattedDate = meeting.date ? new Date(meeting.date).toLocaleDateString('en-US', {
  weekday: 'long',
  month: 'long',
  day: 'numeric',
  year: 'numeric'
}) : 'Date unknown';

function formatShortDate(date: string | null): string {
  if (!date) return 'Unknown';
  return new Date(date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
}

function formatDuration(seconds: number | null): string {
  if (!seconds) return '';
  const hours = Math.floor(seconds / 3600);
  const minutes = Math.floor((seconds % 3600) / 60);
  return hours > 0 ? `${hours}h ${minutes}m` : `${minutes} min`;
}

// Summary display config
const INITIAL_SUMMARY_COUNT = 7;
const showSummaryExpander = meeting.summary.length > INITIAL_SUMMARY_COUNT;
const initialSummary = meeting.summary.slice(0, INITIAL_SUMMARY_COUNT);
const remainingSummary = meeting.summary.slice(INITIAL_SUMMARY_COUNT);
---

<BaseLayout title={meeting.title}>
  <!-- Simple back navigation -->
  <a href={base} class="inline-flex items-center gap-2 text-sm text-base-content/50 hover:text-primary mb-6 group">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:-translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    All Meetings
  </a>

  <!-- Meeting header - clean and focused -->
  <header class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
      <div class="flex-1">
        <h1 class="text-2xl md:text-3xl font-bold text-base-content mb-2 leading-tight">
          {meeting.title}
        </h1>
        <p class="text-base-content/60">
          {formattedDate}
          {meeting.duration && <span class="text-base-content/40"> · {formatDuration(meeting.duration)}</span>}
        </p>
      </div>

      <!-- Single action button -->
      {meeting.videoUrl && (
        <a
          href={meeting.videoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary btn-sm shrink-0"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Watch Recording
        </a>
      )}
    </div>
  </header>

  <div class="grid gap-8 lg:grid-cols-3">
    <!-- Main content -->
    <div class="lg:col-span-2 space-y-8">

      <!-- Summary - with expander for long lists -->
      {meeting.summary.length > 0 && (
        <section>
          <h2 class="text-lg font-semibold text-base-content mb-4">Key Points</h2>
          <div class="bg-base-200 rounded-lg p-5 border border-base-300">
            <ul class="space-y-2.5" id="summary-list">
              {initialSummary.map((bullet, i) => (
                <li class="flex gap-3 text-sm leading-relaxed">
                  <span class="text-primary/60 shrink-0 mt-0.5">•</span>
                  <span class="text-base-content/80">{bullet}</span>
                </li>
              ))}
            </ul>

            {showSummaryExpander && (
              <details class="mt-3">
                <summary class="text-sm text-primary cursor-pointer hover:underline">
                  Show {remainingSummary.length} more points
                </summary>
                <ul class="space-y-2.5 mt-3 pt-3 border-t border-base-300">
                  {remainingSummary.map(bullet => (
                    <li class="flex gap-3 text-sm leading-relaxed">
                      <span class="text-primary/60 shrink-0 mt-0.5">•</span>
                      <span class="text-base-content/80">{bullet}</span>
                    </li>
                  ))}
                </ul>
              </details>
            )}
          </div>
        </section>
      )}

      <!-- Votes -->
      {meeting.votes && meeting.votes.length > 0 && (
        <section>
          <h2 class="text-lg font-semibold text-base-content mb-4">
            Votes
            <span class="text-base-content/40 font-normal ml-2">({meeting.votes.length})</span>
          </h2>
          <div class="bg-base-200 rounded-lg border border-base-300 overflow-hidden">
            <VoteTable votes={meeting.votes} />
          </div>
        </section>
      )}

      <!-- Transcript -->
      {(meeting.diarizedTranscript || meeting.transcript) && (
        <section>
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-base-content">
              Transcript
              {meeting.diarizedTranscript && (
                <span class="text-xs font-normal text-base-content/50 ml-2">with speaker IDs</span>
              )}
            </h2>
            {meeting.transcript && (
              <a
                href={`${base}transcripts/${meeting.id}.txt`}
                download
                class="text-sm text-primary hover:underline flex items-center gap-1"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
                Download
              </a>
            )}
          </div>

          <details class="bg-base-200 rounded-lg border border-base-300 group">
            <summary class="p-4 cursor-pointer hover:bg-base-300/50 transition-colors text-sm text-base-content/70">
              Click to expand full transcript
            </summary>
            <div class="p-4 pt-0 border-t border-base-300">
              <div class="max-h-[500px] overflow-y-auto" data-pagefind-body>
                {meeting.diarizedTranscript ? (
                  <SpeakerTranscript segments={meeting.diarizedTranscript} videoUrl={meeting.videoUrl} />
                ) : (
                  <div class="prose prose-sm max-w-none text-base-content/70">
                    {meeting.transcript?.split('\n\n').map(paragraph => (
                      <p class="mb-3">{paragraph}</p>
                    ))}
                  </div>
                )}
              </div>
            </div>
          </details>

          <p class="text-xs text-base-content/40 mt-2">
            AI-generated transcript. May contain errors.
          </p>
        </section>
      )}
    </div>

    <!-- Sidebar - simplified -->
    <aside class="space-y-6">
      <!-- Recent meetings only -->
      <div class="bg-base-200 rounded-lg p-4 border border-base-300">
        <h3 class="text-sm font-medium text-base-content/70 mb-3">Recent Meetings</h3>
        <ul class="space-y-2">
          {recentMeetings.map(m => (
            <li>
              <a
                href={`${base}meetings/${m.id}`}
                class="block hover:bg-base-300/50 -mx-2 px-2 py-1.5 rounded transition-colors"
              >
                <div class="text-sm text-base-content line-clamp-1">{m.title}</div>
                <div class="text-xs text-base-content/50">{formatShortDate(m.date)}</div>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Topics if present -->
      {meeting.topics.length > 0 && (
        <div class="bg-base-200 rounded-lg p-4 border border-base-300">
          <h3 class="text-sm font-medium text-base-content/70 mb-3">Topics Discussed</h3>
          <div class="flex flex-wrap gap-1.5">
            {meeting.topics.map(topic => (
              <a
                href={`${base}topics/${encodeURIComponent(topic)}`}
                class="text-xs px-2 py-1 bg-base-300 hover:bg-primary/20 hover:text-primary rounded transition-colors"
              >
                {topic}
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Quick links -->
      <div class="text-sm space-y-2">
        <a href={`${base}members`} class="block text-base-content/60 hover:text-primary transition-colors">
          → View council members
        </a>
        <a href={`${base}topics`} class="block text-base-content/60 hover:text-primary transition-colors">
          → Browse by topic
        </a>
      </div>
    </aside>
  </div>
</BaseLayout>

<style>
  [data-pagefind-body] {
    --pagefind-body: true;
  }

  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
