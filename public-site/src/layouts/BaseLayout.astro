---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Chico City Council Meeting Archive - Searchable transcripts, voting records, and meeting summaries" } = Astro.props;
// Ensure base URL ends with /
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
---

<!DOCTYPE html>
<html lang="en" data-theme="civic">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <title>{title} | Chico Council Archive</title>
  </head>
  <body class="min-h-screen bg-base-100 text-base-content">
    <!-- Navigation -->
    <header class="navbar bg-base-200 border-b border-base-300 sticky top-0 z-50">
      <div class="container mx-auto px-3 sm:px-4">
        <div class="flex-1 min-w-0">
          <a href={base} class="text-base sm:text-xl font-bold text-primary hover:text-primary-focus transition-colors truncate">
            Chico Council Archive
          </a>
        </div>
        <div class="flex-none gap-1 flex-shrink-0">
          <!-- Desktop nav -->
          <nav class="hidden md:flex gap-1">
            <a href={base} class="btn btn-ghost btn-sm min-h-11 px-3">Meetings</a>
            <a href={`${base}members`} class="btn btn-ghost btn-sm min-h-11 px-3">Members</a>
            <a href={`${base}topics`} class="btn btn-ghost btn-sm min-h-11 px-3">Topics</a>
            <a href={`${base}stats`} class="btn btn-ghost btn-sm min-h-11 px-3">Stats</a>
            <a href={`${base}data`} class="btn btn-ghost btn-sm min-h-11 px-3">Data</a>
            <a href={`${base}about`} class="btn btn-ghost btn-sm min-h-11 px-3">About</a>
          </nav>
          <!-- Mobile nav dropdown -->
          <div class="dropdown dropdown-end md:hidden">
            <label tabindex="0" class="btn btn-ghost btn-sm min-h-11 px-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </label>
            <ul tabindex="0" class="dropdown-content menu p-2 shadow-lg bg-base-200 rounded-box w-52 border border-base-300 mt-2 z-50">
              <li><a href={base}>Meetings</a></li>
              <li><a href={`${base}members`}>Council Members</a></li>
              <li><a href={`${base}topics`}>Topics</a></li>
              <li><a href={`${base}voting-alignment`}>Voting Alignment</a></li>
              <li><a href={`${base}stats`}>Statistics</a></li>
              <li><a href={`${base}data`}>Download Data</a></li>
              <li><a href={`${base}about`}>About</a></li>
            </ul>
          </div>
        </div>
      </div>
    </header>

    <!-- Main content -->
    <main class="container mx-auto px-3 sm:px-4 py-6 sm:py-8">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="footer footer-center p-4 sm:p-6 bg-base-200 text-base-content border-t border-base-300 mt-auto">
      <div class="max-w-prose px-2">
        <p class="text-sm text-base-content/80 font-medium">
          Independent Research Project &mdash; Not affiliated with the City of Chico
        </p>
        <p class="text-xs text-base-content/60 mt-1">
          Data sourced from <a href="https://chico-ca.granicus.com" class="link link-primary" target="_blank" rel="noopener">Chico Granicus</a>
          &bull; Transcripts are AI-generated and may contain errors
        </p>
        <p class="text-xs text-base-content/40 mt-1">
          Built for fun &bull; <a href={`${base}about`} class="link link-hover">Learn more</a>
        </p>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Ensure footer stays at bottom */
  body {
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  /* Print-friendly styles */
  @media print {
    /* Hide navigation and footer */
    header.navbar,
    footer.footer {
      display: none !important;
    }

    /* Reset background colors for print */
    body,
    main,
    .bg-base-100,
    .bg-base-200,
    .bg-base-300 {
      background: white !important;
      color: black !important;
    }

    /* Hide interactive elements */
    .btn,
    button,
    .badge,
    .filter-bar,
    .pagination,
    details > summary,
    a[href*="granicus"] {
      display: none !important;
    }

    /* Show details content */
    details {
      display: block !important;
    }
    details[open] > div {
      display: block !important;
    }

    /* Clean typography */
    .text-base-content,
    .text-base-content\/60,
    .text-base-content\/70,
    .text-base-content\/80 {
      color: black !important;
    }

    /* Remove borders and shadows */
    .border,
    .border-base-300,
    .rounded-box {
      border: 1px solid #ddd !important;
      box-shadow: none !important;
    }

    /* Ensure links are visible */
    a {
      color: black !important;
      text-decoration: underline !important;
    }

    /* Meeting title styling */
    h1, h2, h3 {
      color: black !important;
      page-break-after: avoid;
    }

    /* Keep content together */
    .card, section {
      page-break-inside: avoid;
    }

    /* Show sidebar content inline */
    aside {
      display: none !important;
    }

    /* Full width for main content */
    .lg\:col-span-2 {
      grid-column: 1 / -1 !important;
    }

    /* Expand transcript for printing */
    .max-h-\[600px\] {
      max-height: none !important;
      overflow: visible !important;
    }

    /* Print URL after external links */
    a[href^="http"]:after {
      content: " (" attr(href) ")";
      font-size: 0.8em;
      color: #666;
    }
  }
</style>
