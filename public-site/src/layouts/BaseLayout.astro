---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Chico City Council Meeting Archive - Searchable transcripts, voting records, and meeting summaries" } = Astro.props;
// Ensure base URL ends with /
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
---

<!DOCTYPE html>
<html lang="en" data-theme="civic">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <title>{title} | Chico Council Archive</title>
  </head>
  <body class="min-h-screen bg-base-100 text-base-content">
    <!-- Navigation -->
    <header class="navbar bg-base-200 border-b border-base-300 sticky top-0 z-50">
      <div class="container mx-auto px-3 sm:px-4">
        <div class="flex-1 min-w-0">
          <a href={base} class="text-base sm:text-xl font-bold text-primary hover:text-primary-focus transition-colors truncate">
            Chico Council Archive
          </a>
        </div>
        <div class="flex-none gap-1 sm:gap-2 flex-shrink-0">
          <a href={base} class="btn btn-ghost btn-sm min-h-11 px-2 sm:px-3">Meetings</a>
          <a href={`${base}about`} class="btn btn-ghost btn-sm min-h-11 px-2 sm:px-3">About</a>
        </div>
      </div>
    </header>

    <!-- Main content -->
    <main class="container mx-auto px-3 sm:px-4 py-6 sm:py-8">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="footer footer-center p-4 sm:p-6 bg-base-200 text-base-content border-t border-base-300 mt-auto">
      <div class="max-w-prose px-2">
        <p class="text-sm text-base-content/80 font-medium">
          Independent Research Project &mdash; Not affiliated with the City of Chico
        </p>
        <p class="text-xs text-base-content/60 mt-1">
          Data sourced from <a href="https://chico-ca.granicus.com" class="link link-primary" target="_blank" rel="noopener">Chico Granicus</a>
          &bull; Transcripts are AI-generated and may contain errors
        </p>
        <p class="text-xs text-base-content/40 mt-1">
          Built for fun &bull; <a href={`${base}about`} class="link link-hover">Learn more</a>
        </p>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Ensure footer stays at bottom */
  body {
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }
</style>
